@using Microsoft.AspNetCore.Mvc.Localization
@using UserApiClientGenerated

@model ChangeRole
@inject IViewLocalizer Localizer

<h2>@Localizer["Change role for"] @Model.UserEmail</h2>
<form asp-action="ChangeRole" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (Role role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Change"]</button>
</form>