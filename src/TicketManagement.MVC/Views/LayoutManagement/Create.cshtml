@using TicketManagement.Common.DI
@using TicketManagement.Common.Entities

@model Layout
@inject IVenueService VenueService

@{
    ViewBag.Title = "Add layout";

    var selectListVenueId = (await VenueService.GetAllAsync())
        ?.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name })
        .ToList();
}

<form asp-action="Create" asp-controller="LayoutManagement">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-floating">
        <select asp-for="VenueId" asp-items="selectListVenueId" class="form-select"></select>
        <label class="form-label">VenueId</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-outline-secondary" />
    </div>
</form>