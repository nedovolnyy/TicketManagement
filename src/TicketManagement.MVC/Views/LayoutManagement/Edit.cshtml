@using TicketManagement.Common.DI
@using TicketManagement.Common.Entities

@model Layout
@inject IVenueService VenueService

@{
    ViewBag.Title = "Edit layouts";

    var selectListVenueId = (await VenueService.GetAllAsync())
        ?.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name })
        .ToList();
}

@if (TempData.ContainsKey("notice"))
{
    <script type="text/javascript">
        alert(@TempData["notice"]);
    </script>
}
<form asp-action="Edit" asp-controller="LayoutManagement">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-floating">
        <select asp-for="VenueId" asp-items="selectListVenueId" class="form-select"></select>
        <label class="form-label">Venue</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-secondary" />
    </div>
</form>
