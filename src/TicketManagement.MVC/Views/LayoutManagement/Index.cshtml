@using TicketManagement.Common.DI
@using TicketManagement.Common.Entities

@model IEnumerable<Layout>
@inject IVenueService VenueService

@{
    ViewBag.Title = "Layout Manage";

    var selectListVenueId = (await VenueService.GetAllAsync())
        ?.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name });
}

<table class="table">
    <tr><th>Id</th><th>Name</th><th>Description</th><th>Venue</th><th></th><th></th></tr>
    @foreach (var layout in Model)
    {
        <tr>
            <td>@layout.Id</td>
            <td>@layout.Name</td>
            <td>@layout.Description</td>
            <td>@selectListVenueId.Where(x=>x.Value == layout.VenueId.ToString()).First().Text</td>
            <td>
                <form asp-action="Delete" asp-route-id="@layout.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@layout.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    <tr><a class="btn btn-sm btn-block btn-success" asp-action="Create">Add layout</a></tr>
</table>
