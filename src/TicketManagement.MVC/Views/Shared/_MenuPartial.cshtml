            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="EventManagement" asp-action="CreateEvent" title="Create Event">Create event</a>
            </li>
        }
        @if (User.IsInRole("EventManager"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="EventManagement" asp-action="EditEvent" title="Edit Event">Edit Event</a>
