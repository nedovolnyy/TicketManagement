@using TicketManagement.Common.Identity
@model IEnumerable<User>
@{
    ViewBag.Title = "Manage users";
}

<table class="table">
    <tr><th>User Name</th><th>First Name</th><th>Sur Name</th><th>Email</th><th>PhoneNumber</th><th>Role</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.SurName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="ChangeRole" asp-route-userid="@user.Id">Change role</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    <tr><a class="btn btn-sm btn-block btn-success" asp-action="Create">Add user</a></tr>
</table>