@using TicketManagement.Common.DI
@using TicketManagement.Common.Entities

@model IEnumerable<Area>
@inject ILayoutService LayoutService

@{
    ViewBag.Title = "Area Manage";

    var selectListLayoutsId = (await LayoutService.GetAllAsync())
        ?.Select(c => new SelectListItem { Value = c.Id.ToString(), Text = c.Name });
}

<table class="table">
    <tr><th>Id</th><th>Layout</th><th>Description</th><th>CoordX</th><th>CoordY</th><th></th><th></th></tr>
    @foreach (var area in Model)
    {
        <tr>
            <td>@area.Id</td>
            <td>@selectListLayoutsId.Where(x=>x.Value == area.LayoutId.ToString()).First().Text</td>
            <td>@area.Description</td>
            <td>@area.CoordX</td>
            <td>@area.CoordY</td>
            <td>
                <form asp-action="Delete" asp-route-id="@area.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@area.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    <tr><a class="btn btn-sm btn-block btn-success" asp-action="Create">Add area</a></tr>
</table>