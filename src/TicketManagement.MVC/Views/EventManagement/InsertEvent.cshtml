@using Microsoft.AspNetCore.Mvc.Localization
@using TicketManagement.Common.DI
@using TicketManagement.MVC.Models
@model EventModel

@inject IViewLocalizer Localizer
@inject IServiceProvider ServiceProvider

@{
    ViewData["Title"] = "Create Event";

    var timezoneList = TimeZoneInfo.GetSystemTimeZones()
        ?.Select(c => new SelectListItem { Value = c.BaseUtcOffset.ToString(), Text = c.DisplayName })
        .ToList();

    var layoutIdList = new SelectList(Model.LayoutsId);
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" asp-action="PublishEvent" asp-controller="EventManagement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Description" class="form-control" />
                <label asp-for="Description" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="EventTime" class="form-control" />
                <label asp-for="EventTime" class="form-label"></label>
                <span asp-validation-for="EventTime" class="text-danger"></span>
                <div class="form-floating">
                    <select name="timeZone" asp-items="timezoneList" class="form-select"></select>
                    <label class="form-label">Time Zone for Event</label>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="EventEndTime" class="form-control" />
                <label asp-for="EventEndTime" class="form-label"></label>
                <span asp-validation-for="EventTime" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EventLogoImage" class="form-control" />
                <label asp-for="EventLogoImage" class="form-label"></label>
            </div>
            <div class="form-floating">
                <select name="layoutId" asp-items="layoutIdList" class="form-select"></select>
                <label class="form-label">AreaID</label>
            </div>
            <div class="form-floating">
                <input asp-for="Price" class="form-control" />
                <label asp-for="Price" class="form-label"></label>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Create Event</button>
        </form>
    </div>
</div>
