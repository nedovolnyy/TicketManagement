@page
@using TicketManagement.MVC.Views.EventManagement
@model CreateEventModel

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EventTime" class="form-control" />
                <label asp-for="Input.EventTime" class="form-label"></label>
                <span asp-validation-for="Input.EventTime" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Description" class="form-control"/>
                <label asp-for="Input.Description" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EventEndTime" class="form-control" />
                <label asp-for="Input.EventEndTime" class="form-label"></label>
                <span asp-validation-for="Input.EventTime" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.EventLogoImage" class="form-control"/>
                <label asp-for="Input.EventLogoImage" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
